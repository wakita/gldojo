#version 410 core

layout (triangles, equal_spacing, cw) in;

in vec4 g;

void main(void) {
  vec3 u = gl_TessCoord;
  float v = min(u.x, min(u.y, u.z));
  float s = (1.0 / 3 - v) * 3;

  vec4 p =
    u.x * gl_in[0].gl_Position +
    u.y * gl_in[1].gl_Position +
    u.z * gl_in[2].gl_Position;

  gl_Position = g + vec4((normalize(p - g)).xy * s, 0, 0);
}
